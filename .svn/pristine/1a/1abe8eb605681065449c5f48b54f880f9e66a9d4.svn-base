
############################################################## Auto replace

# Do we need categories?
#auto replace category: text box
#auto replace category: copyright
#auto replace category: everywhere
auto replace:
	match: (C)
	replace: ©
auto replace:
	match: AE
	replace: Æ
	whole word: false
auto replace:
	match: TM
	replace: ™
	whole word: false
auto replace:
	match: --
	replace: —
auto replace:
	# note the spaces
	match:
		 - 
	replace:
		 — 
auto replace:
	match: CIP
	replace: enters the battlefield
auto replace:
	match: AAA
	replace: as an additional cost to cast
auto replace:
	match: @
	replace: LEGENDNAME
auto replace:
	match: ~
	replace: CARDNAME
auto replace:
	match: '
	replace: ’